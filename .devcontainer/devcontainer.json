{
    "context": "../",
    "dockerFile": "../Dockerfile",
    "remoteUser": "ros",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "-e DISPLAY=${env:DISPLAY}",
        "-v /tmp/.X11-unix:/tmp/.X11-unix",
        "--network=host",
        "--gpus=all",
        "--device /dev/dri:/dev/dri"
    ]
